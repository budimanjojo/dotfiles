{{ if (eq .chezmoi.osRelease.id "arch") -}}
#!/bin/bash

set -eufo pipefail

packages=(
    fish
    neovim
    tmux
    curl
    python-pynvim
    npm
    git
    fzf
    fd
    bat
)

aur_packages=()

{{ if (not .headless) -}}
packages+=(
    alacritty
)
{{ end -}}

{{ if .i3wm -}}
packages+=(
    i3-gaps
    i3lock
    py3status
    rofi
    dunst
    conky
    xfce4-panel
)
{{ end -}}

{{ if .swaywm -}}
packages+=(
    sway
    rofi
    waybar
    dunst
)

aur_packages+=(
    nwg-dock
)

{{ end -}}

{{ if ne .chezmoi.username "root" -}}
sudo pacman -Syu --noconfirm

sudo pacman -S --noconfirm ${packages[@]}
{{ else -}}
pacman -Syu --noconfirm

pacman -S --noconfirm ${packages[@]}

{{ end -}}

for aur_package in ${aur_packages[@]}; do
    yay -S --noconfirm $aur_package
done

{{ end -}}
