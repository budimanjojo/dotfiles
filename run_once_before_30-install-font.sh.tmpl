{{ if (and (eq .chezmoi.os "linux" ) (not .headless)) -}}
#!/bin/bash

set -eufo pipefail

font_dir=~/.local/share/fonts

mkdir -p $font_dir
cd $font_dir && curl -fLo "Droid Sans Mono for Powerline Nerd Font Complete.otf" https://github.com/ryanoasis/nerd-fonts/blob/master/patched-fonts/UbuntuMono/Regular/complete/Ubuntu%20Mono%20Nerd%20Font%20Complete.ttf

# reset font cache
if [[ -n $(command -v fc-cache) ]]; then
    fc-cache -vf "$font_dir"
fi

{{ end -}}
